<%= stylesheet_link_tag "sign-up", "data-turbo-track": "reload" %>

<%= form_for(resource, as: resource_name, data: { turbo: 'false' }, url: session_path(resource_name)) do |f| %>
  <p class="title">Log In</p>
  <div class="field">
    <%= f.label :email, class:"label" %>
    <%= f.email_field :email, class:"text-input", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"label" %>
    <%= f.password_field :password, class:"text-input", autocomplete: "current-password" %>
  </div>

  <div class="sign-up-container">
    <%= f.submit "Log in", class:"sign-up-button" %>
  </div>
<% end %>

