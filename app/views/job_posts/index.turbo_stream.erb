<%= turbo_stream.append :job_posts do %>
    <% @job_posts.each do |job_post| %>
        <%= render job_post %>
    <% end %>

<% end %>
<% if @pagy.next.present? %>
    <%= turbo_stream.replace :pagination do %>
        <%= turbo_frame_tag :pagination, loading: :lazy, src: job_posts_path(format: :turbo_stream, page: @pagy.next) %>
    <% end %>
<% end%>