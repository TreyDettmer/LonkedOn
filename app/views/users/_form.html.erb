<%= stylesheet_link_tag "user-profile", "data-turbo-track": "reload" %>
<%= form_with(model: current_user, id: "#{dom_id(current_user)}_form", class:"edit-form") do |form| %>
  <% if current_user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(current_user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% current_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :avatar %>
    <% if current_user.avatar.attached? %>
        <div class="avatar-container">
            <%= image_tag(current_user.avatar) %>
        </div>
        <%= form.file_field :avatar, value: current_user.avatar %>
    <% else %>
        <%= form.file_field :avatar %>
    <% end %>
    
  </div>

  <div>
    <%= form.label :headline %>
    <%= form.text_area :headline, class:"text-input", value: current_user.headline %>
  </div>
  <div>
    <%= form.label :location %>
    <%= form.text_field :location, class:"text-input", value: current_user.location %>
  </div>
  <div class="submit-container">
    <%= form.submit class:"submit-button" %>
  </div>
<% end %>